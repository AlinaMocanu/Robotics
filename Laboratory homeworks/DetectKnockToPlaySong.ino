void setup() {
      pinMode(speakerPin, INPUT);
      pinMode(ledPin, OUTPUT);
      pinMode(pushButton, INPUT_PULLUP); 
      Serial.begin(9600);
}

void loop() {
     speakerValue = analogRead(speakerPin);
     if (speakerValue != 0)
          Serial.println(speakerValue);
             
     if (speakerValue > threshold){
          knockDelay = millis();
          checkKnock = true;
          Serial.println("Knock");
          ledState = !ledState;
          digitalWrite(ledPin, ledState);  
     }
     
     if (millis() - knockDelay > knockInterval){ 
          /// checkKnock prevents the buzzer from playing the song at random times. Only if a knock is detected will the song be played
          if (checkKnock == true){
               playNote();
               buttonState = digitalRead(pushButton);
               if (buttonState == LOW){
                   noTone(activebuzzerPin);
                   /// reset both checkKnock and index so the song will play from the beginning only if a new knock is detected 
                   checkKnock = false;
                   index = 0;
               }    
          }
     }     
}

void playNote(){
    noteDelay = duration[index] * songspeed; 
    tone(activebuzzerPin, notes[index], noteDelay);
    delay(noteDelay);
    if (index < 203) /// the song has 203 notes  
        index++; 
    else
        index = 0;   
}
